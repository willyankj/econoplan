generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// -------------------------------------------------
// Core Models
// -------------------------------------------------

model Tenant {
  id                 String      @id @default(uuid())
  name               String
  slug               String      @unique 
  logoUrl            String?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  
  // Soft Delete
  deletedAt          DateTime?   // <--- NOVO CAMPO

  subscriptionStatus String      @default("TRIAL") 
  planType           String      @default("FREE")  
  nextPayment        DateTime?
  mercadoPagoId      String?
  settings           Json?       @default("{}") 
  
  users              User[]
  workspaces         Workspace[]
  goals              Goal[]      
  auditLogs          AuditLog[]
}

model Workspace {
  id            String            @id @default(uuid())
  name          String
  description   String?
  color         String?           @default("#000000")
  
  // Soft Delete
  deletedAt     DateTime?         // <--- NOVO CAMPO

  tenantId      String
  tenant        Tenant            @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  members       WorkspaceMember[]
  bankAccounts  BankAccount[]
  transactions  Transaction[]
  categories    Category[]
  budgets       Budget[]
  creditCards   CreditCard[]
  goals         Goal[]            
 
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  @@index([tenantId])
}

model User {
  id            String            @id @default(uuid())
  name          String?
  email         String            @unique
  emailVerified DateTime?
  password      String?   
  image         String?
  lastLogin     DateTime?
  tenantId      String
  tenant        Tenant            @relation(fields: [tenantId], references: [id])
  role          UserRole          @default(OWNER)
  
  accounts      Account[] 
  sessions      Session[]
  workspaces    WorkspaceMember[]
  notifications Notification[]    
  auditLogs     AuditLog[]  
  
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
}

model WorkspaceMember {
  id          String        @id @default(uuid())
  userId      String
  workspaceId String
  role        WorkspaceRole @default(MEMBER)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  workspace   Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([userId, workspaceId])
  @@index([userId])
  @@index([workspaceId])
}

enum UserRole {
  OWNER
  ADMIN
  MEMBER
  OBSERVER
}

enum WorkspaceRole {
  ADMIN
  MEMBER
  VIEWER
}

// -------------------------------------------------
// NextAuth
// -------------------------------------------------

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// -------------------------------------------------
// Financeiro
// -------------------------------------------------

model BankAccount {
  id            String    @id @default(uuid())
  name          String    
  bank          String    
  balance       Decimal   @default(0)
  isIncluded    Boolean   @default(true)
  
  workspaceId   String
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
 
  transactions  Transaction[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([workspaceId])
}

model Category {
  id            String          @id @default(uuid())
  name          String
  icon          String?         @default("Tag") // Nome do ícone (Lucide)
  color         String?         @default("#94a3b8") // Cor em Hex
  type          TransactionType
  
  workspaceId   String
  workspace     Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  parentId      String?
  parent        Category?       @relation("SubCategories", fields: [parentId], references: [id], onDelete: SetNull)
  children      Category[]      @relation("SubCategories")
  
  transactions  Transaction[]
  budgets       Budget[]
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@unique([workspaceId, name, type]) 
  @@index([workspaceId])
  @@index([parentId])
}

model Transaction {
  id            String          @id @default(uuid())
  description   String
  amount        Decimal
  date          DateTime
  type          TransactionType
  isPaid        Boolean         @default(false)
  
  isRecurring   Boolean         @default(false) // É uma assinatura/conta fixa?
  frequency     TransactionFrequency @default(NONE) // Mensal, Semanal...
  
  isInstallment Boolean         @default(false) // É parcelado?
  installmentId String?         // ID único para agrupar as parcelas da mesma compra
  installmentCurrent Int?       // Parcela atual (1)
  installmentTotal   Int?       // Total de parcelas (10)
  nextRecurringDate DateTime?
  
  workspaceId   String
  workspace     Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  bankAccountId String?
  bankAccount   BankAccount?    @relation(fields: [bankAccountId], references: [id], onDelete: Cascade)
  
  creditCardId  String?
  creditCard    CreditCard?     @relation(fields: [creditCardId], references: [id], onDelete: Cascade)
  
  goalId        String?
  goal          Goal?           @relation(fields: [goalId], references: [id], onDelete: SetNull)
  
  categoryId    String?
  category      Category?       @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([workspaceId])
  @@index([bankAccountId])
  @@index([categoryId])
  @@index([creditCardId])
  @@index([goalId])
  @@index([installmentId]) // Importante para buscar todas as parcelas de uma compra
}

enum TransactionFrequency {
  NONE
  WEEKLY
  MONTHLY
  YEARLY
}

model Budget {
  id            String    @id @default(uuid())
  name          String    
  targetAmount  Decimal
  currentAmount Decimal   @default(0)
  startDate     DateTime?
  endDate       DateTime?
  alertThreshold Float?   @default(0.8)
  
  workspaceId   String
  workspace     Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  categoryId    String?
  category      Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([workspaceId])
  @@index([categoryId])
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

model CreditCard {
  id             String        @id @default(uuid())
  name           String        
  bank           String        
  limit          Decimal       
  closingDay     Int           
  dueDay         Int           
  
  workspaceId    String
  workspace      Workspace     @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  transactions   Transaction[]
  
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Goal {
  id            String    @id @default(uuid())
  name          String    
  targetAmount  Decimal   
  currentAmount Decimal   @default(0) 
  deadline      DateTime?
  
  // Regras de Divisão (JSON): { "workspace_id": 60, "workspace_id_2": 40 }
  contributionRules Json?
  
  workspaceId   String?
  workspace     Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  
  tenantId      String?
  tenant        Tenant?    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  transactions  Transaction[]

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([workspaceId])
  @@index([tenantId])
}

model Notification {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title       String
  message     String?
  read        Boolean  @default(false)
  type        String   @default("INFO")
  link        String?
  createdAt   DateTime @default(now())

  @@index([userId])
}

model AuditLog {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  
  action    String   
  entity    String   
  entityId  String?
  details   String?  

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  tenantId  String
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([createdAt])
}